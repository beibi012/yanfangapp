
.choice{
	display: -webkit-box;
	display: -webkit-flex;
	display: -ms-flexbox;
	display: flex;
	width: 750rpx;
	height: 100vh;
	z-index: 100;
	background-color: #fff;
	border: #00B4FF 1px solid;
}
.choice .left{
	width: 40%;
	display: -webkit-box;
	display: -webkit-flex;
	display: -ms-flexbox;
	display: flex;
	height: 100vh;
	border: #00B4FF 1px solid;
}
.choice .left .list_title{
	display: -webkit-box;
	display: -webkit-flex;
	display: -ms-flexbox;
	display: flex;
	width: 100%;
	height: 15vh;
	line-height: 15vh;
	-webkit-box-pack : center;
	-webkit-justify-content : center;
	    -ms-flex-pack : center;
	        justify-content : center;
	color: #333;
	font-size: 35rpx;
	border: red 1px solid;
}
.choice .right{
	display: -webkit-box;
	display: -webkit-flex;
	display: -ms-flexbox;
	display: flex;
	height: 100vh;
	border: #4CD964 1px solid;
	width: 60%;
}
.choice .right .list_content{
	display: -webkit-box;
	display: -webkit-flex;
	display: -ms-flexbox;
	display: flex;
	width: 100%;
	height: 10vh;
	line-height: 10vh;
	-webkit-box-pack : center;
	-webkit-justify-content : center;
	    -ms-flex-pack : center;
	        justify-content : center;
	color: #333;
	font-size: 35rpx;
	border: pink 1px solid;
}

