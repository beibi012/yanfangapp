
.choice{
	display: -webkit-box;
	display: -webkit-flex;
	display: -ms-flexbox;
	display: flex;
	width: 750rpx;
	height: 100vh;
	z-index: 100;
	background-color: #fff;
}
.choice .left{
	width: 40%;
	display: -webkit-box;
	display: -webkit-flex;
	display: -ms-flexbox;
	display: flex;
	height: 100vh;
}
.choice .left .list_title{
	display: -webkit-box;
	display: -webkit-flex;
	display: -ms-flexbox;
	display: flex;
	width: 310rpx;
	height: 15vh;
	line-height: 50rpx;
	-webkit-box-pack : center;
	-webkit-justify-content : center;
	    -ms-flex-pack : center;
	        justify-content : center;
	-webkit-box-align: center;
	-webkit-align-items: center;
	    -ms-flex-align: center;
	        align-items: center;
	color: #333;
	font-size: 35rpx;
	border-bottom: #ddd 1px solid;
	background-image: #fff;
	background-position-x: -300rpx;
	background-repeat: no-repeat;
	overflow-wrap:break-word;
	overflow:hidden;
}
.choice .left .list_title .text{
	overflow-wrap:break-word;
	overflow:hidden;
}
.choice .right{
	display: -webkit-box;
	display: -webkit-flex;
	display: -ms-flexbox;
	display: flex;
	height: 100vh;
	width: 60%;
	border: #ddd 1px solid;
}
.choice .right .list_content{
	display: -webkit-box;
	display: -webkit-flex;
	display: -ms-flexbox;
	display: flex;
	width: 100%;
	height: 10vh;
	line-height: 10vh;
	-webkit-box-pack : center;
	-webkit-justify-content : center;
	    -ms-flex-pack : center;
	        justify-content : center;
	color: #333;
	font-size: 35rpx;
	border-bottom: #ddd 1px solid;
}
.active{
	background-image: -webkit-gradient(linear , left top, right top , from(#bbe1fb), to(#00b4ff))!important;
	background-image: -o-linear-gradient(left , #bbe1fb, #00b4ff)!important;
	background-image: linear-gradient(to right , #bbe1fb, #00b4ff)!important;
	color: #fff!important;
	-webkit-transition: .4s;
	-o-transition: .4s;
	transition: .4s;
	background-position-x: 1rpx!important;
}
.selected{
	color: #333!important;
}

