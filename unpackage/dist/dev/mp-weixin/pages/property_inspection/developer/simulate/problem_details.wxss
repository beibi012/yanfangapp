
.rectification{
	width: 100%;
	height: 80rpx;
	border-top: 1px solid black;
	line-height: 80rpx;
}
.color{
		display: inline-block;
		height: 50rpx;
		width: 10rpx;
		margin: 15rpx 0 15rpx 2%;
}
.color_red{
		background-color: #eb3226;
}
.color_green{
		background-color: #a5d255;
}
.color_green text{
		display: inline-block;
		margin-left: 2%;
		vertical-align: top;
}
.line{
	border-top: 1px solid black;
}
.pr_button{
	height: 130rpx;
	background-color: #fff;
	white-space: nowrap;
}
.fail{
		display: inline-block;
		height: 90rpx;
		width: 40%;
		text-align: center;
		line-height: 90rpx;
		border: 1px solid #DDD;
		margin: 20rpx 5%;
		border-radius: 10rpx;
		color: red;
}
.pass{
		display: inline-block;
		height: 90rpx;
		width: 40%;
		text-align: center;
		line-height: 90rpx;
		border: 1px solid #DDD;
		margin: 20rpx 5%;
		border-radius: 10rpx;
		color: #FFFFFF;
		background-color: #00B4FF;
}

